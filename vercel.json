{
    "$schema": "https://openapi.vercel.sh/vercel.json",
    "installCommand": "npm install -g pnpm && pnpm install",
    "buildCommand": "cd apps/api && npx tsup && cd ../../apps/web && npx vite build",
    "outputDirectory": "apps/web/dist",
    "framework": null,
    "rewrites": [
        {
            "source": "/api/(.*)",
            "destination": "/api"
        },
        {
            "source": "/(.*)",
            "destination": "/index.html"
        }
    ],
    "functions": {
        "api/index.ts": {
            "maxDuration": 30,
            "includeFiles": "apps/api/dist/**"
        }
    }
}